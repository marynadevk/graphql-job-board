{
  "overwrite": true,
  "schema": "./schema.graphql",
  "generates": {
    "src/generated/schema.ts": {
      "plugins": [
        "typescript",
        "typescript-resolvers"
      ],
      "config": {
        "contextType": "src/interfaces/IResolverContext.ts",
        "mappers": {
          "Company": "src/interfaces/ICompanyEntity.ts",
          "Job": "src/interfaces/IJobEntity.ts"
        },
        "skipTypename": true
      }
    }
  }
}
